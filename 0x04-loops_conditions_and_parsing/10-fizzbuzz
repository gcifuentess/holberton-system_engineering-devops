#!/usr/bin/env bash
# Displays numbers from 1 to 100 with FizzBuzz format

LIMIT=100

for ((i=1; i <= LIMIT; i++))
do
    if ((i % 3 == 0 && i % 5 == 0 ))
    then
	echo "FizzBuzz"
    elif ((i % 3 == 0))
    then
	echo "Fizz"
    elif ((i % 5 == 0))
    then
	echo "Buzz"
    else
	echo "$i"
    fi
done
